# Dockerfile for building daml-on-concord.

# daml_ledger_api

FROM ubuntu:18.04

RUN apt update && apt install -y gnupg2 ca-certificates && \
    echo "deb https://dl.bintray.com/sbt/debian /" > /etc/apt/sources.list.d/sbt.list && \
    apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv 2EE0EA64E40A89B84B2DF73499E82A75642AC823 && \
    apt update && apt install -y openjdk-8-jdk-headless sbt && \
    rm -rf /var/lib/apt/lists/*

COPY daml/build.sbt /doc/daml/
COPY daml/project /doc/daml/project
WORKDIR /doc/daml
RUN sbt update

COPY concord/proto /doc/concord/proto
COPY daml/kvbc_sync_backend /doc/daml/kvbc_sync_backend
COPY daml/kvbc_ledger_server /doc/daml/kvbc_ledger_server

COPY daml/ledger-api-test-tool_2.12-100.13.8.jar /doc/daml/
COPY daml/SemanticTests.dar /doc/daml/
COPY daml/Test.dar /doc/daml/

RUN sbt stage
